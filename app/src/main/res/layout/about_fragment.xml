        <TextView
            style="@style/about_fragment_paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_ploiesti2" />

        <TextView
            style="@style/about_fragment_paragraph_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_ploiesti3" />

        <TextView
            style="@style/about_fragment_paragraph_style"
            android:layout_width="match_parent"
